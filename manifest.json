{
    "manifest_version": 2,
    "name": "Xtrakt",
    "version": "1.0",
  
    "description": "Extrakt urls from any one page at a time",
    "homepage_url": "https://github.com/Moifek/Extrakt",

    "icons": {
      "48": "ressources/extract-48.png"
    },
    "browser_action": {
      "default_popup": "index.html",
      "default_title": "Extrakt",
      "default_icon": {
        "48": "ressources/extract-48.png"
      }
    },
    "content_scripts": [ {
      "matches":["<all_urls>"],
      "js":["extrakt.js"]
    }],
    "background": {
      "scripts": ["extrakt_back.js"],
      "persistent": false
    },
    "permissions": [
      "tabs",
      "activeTab",
      "<all_urls>"
    ]
    
  }
  